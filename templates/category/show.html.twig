{% extends 'base.html.twig' %}
{% block title %}
{{ parent() }} - Catégorie {{ category.name }}
{% endblock %}
{% block body %}
    <h1>Les derniers ajouts dans la catégorie {{ category.name }}</h1>
    {% for program in programs %}
    <div>
        <h2>Série #{{ program.id }} - <a href="{{ path("program_show", {id: program.id }) }}">{{ program.title }}</a></h2>
        <p>{{ program.summary }}</p>
    </div>
        {% else %}
        Aucune série trouvée
    {% endfor %}
    <a href="{{ path("category_index") }}">
        Retour à la liste des catégories
    </a>
{% endblock %}
