{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }} - All programs
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
<h1 class="mt-5">Toutes les séries :</h1>
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button>Search</button>
    {{ form_end(form) }}
{% for program in programs %}
<div class="card mt-5">
    <div class="card-body">
        <h5 class="card-title">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h5>
        <p class="card-text">{{ program.summary }}</p>
        <a href="{{ path("program_show", {'slug': program.slug }) }}" class="btn btn-primary">Voir la fiche</a>
    </div>
</div>
    {% else %}
    Aucune série trouvée
    {% endfor %}
    <a href="{{ path('program_new') }}">Ajouter une série</a>
    <br>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
        </div>
        </div>
    </div>
{% endblock %}
