{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }} - Série #{{ program.id }}
{% endblock %}
{% block body %}
    <div class="card" style="width: 18rem;">
        <img src="{{ program.poster }}" class="card-img-top" alt="{{ program.title }} poster">
        <div class="card-body">
            <h5 class="card-title">{{ program.title }}</h5>
            <p class="card-text">{{ program.summary }}</p>
            {% for season in program.seasons %}
                <a href="{{ path('program_season_show', {'slug': program.slug, 'season': season.id }) }}"><p>Saison #{{ season.number }}</p></a>
                {% else %}
                <p>Aucune saison trouvée</p>
            {% endfor %}
            <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path("actor_show", {'id': actor.id }) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            <a href="{{ path('category_index') }}" class="btn btn-primary">Catégorie : {{ program.category.name }}</a>
        </div>
    </div>
    <a href="{{ path('program_index') }}">
        Retour à la liste des séries
    </a>

{% endblock %}
